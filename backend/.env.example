# =====================================================
# CBSE Student Tutor — Backend Environment Variables
# Copy to .env and fill in your values.
# On Render: set these in the Environment dashboard.
# =====================================================

# Django
DJANGO_SECRET_KEY=change-this-to-a-long-random-string-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Local dev:  leave blank → uses SQLite automatically
# Render:     set automatically via render.yaml (DATABASE_URL)
# DATABASE_URL=postgres://user:password@host:5432/dbname

# ── AI API Keys (required for AI features) ──────────
# Groq — FREE at https://console.groq.com
GROQ_API_KEY=gsk_your_groq_key_here

# Pinecone — FREE tier at https://app.pinecone.io
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_INDEX_NAME=cbse-tutor

# ── LLM Config ──────────────────────────────────────
EMBEDDING_MODEL=all-MiniLM-L6-v2
PRIMARY_MODEL=llama-3.1-8b-instant
VISION_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
FALLBACK_MODEL=gemma2-9b-it
MAX_TOKENS=1024
TEMPERATURE=0.1
TOP_K_RETRIEVAL=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# ── CORS ─────────────────────────────────────────────
# Local:   http://localhost:3000
# Render:  add your Vercel URL, e.g. https://yourapp.vercel.app
CORS_ORIGINS=http://localhost:3000

# ── Redis (OPTIONAL) ─────────────────────────────────
# If not set → falls back to in-memory cache (resets on restart).
# To enable persistent caching, add a Redis service on Render or
# use Upstash free tier (https://upstash.com) and paste URL here:
# REDIS_URL=redis://default:password@host:port
